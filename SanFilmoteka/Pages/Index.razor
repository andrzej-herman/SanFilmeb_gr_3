@page "/"
@inject IMovieService Service

<MovieHeader Title="Katalog filmowy"/>
<div class="container">
    <MovieSearchBar />
    @if (MyMovies != null)
    {
        <MovieCatalog Movies="@MyMovies" />
    }

</div>
<MovieFooter />


@code {
    public List<SimpleMovie> MyMovies { get; set; }

    // od tego zaczniemy nastepne zajęcia ...
    // wyjaśnić dlczego tak zrobiłem
    protected override void OnInitialized()
    {
        MyMovies = Service.GetRandomMovies().ToList();
    }
}